    public class PricingModel
    {

    }


    public class PlainVanillaBond_SpotRatePricing:PricingModel
    {

    }

    public class PlainVanillaBond_ParRatePricing:PricingModel
    {
        public PlainVanillaBond_ParRatePricing(InterestRate uParRate)
        {
            ParRate = uParRate;
        }

        public InterestRate ParRate { get; set; }

        public DateTime[] Price(PlainVanillaBond uBond)
        {
            return(uBond.CashFlowSchedule);
        }
    }
